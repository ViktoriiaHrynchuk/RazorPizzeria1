@page
@model RazorPizzeria1.Pages.PizzaModel
@{
    ViewData["Title"] = "Pizza";
}
<div class="text-center">
    <div class="mainText">
        <h1 class="display-4 text-capitalize text-black">Our greate select of pizzas</h1>
        <h4>Choose one, of try our Pizza Builder! Then Order and Done! </h4>
        <h4>No need to give any of your ditails!</h4>
        <h4>We already Know everytning!</h4>
        <p class="smallText"><i>Only one pizza per order.</i></p>
    </div>
    <div class="container ">
        <div class="row">
            <div class="col-12 mb-5 mt-5">
                <div class="w-100 row makeYourOwnDiv">
                    <div class="col-4">
                        <img src="css/images/Create.png" class="w-100"/>
                    </div>
                    <div class="col-8 align-items-center">
                        <div class="align-middle makeYourOwnText">
                            <h3 style="text-align: left;">Create your own pizza</h3>
                            <p style="text-align: left;">Make your own Pizza with our PizzaMaker!</p>
                            <a class="btn btn-primary" style="float: left" sp-area="" asp-page="Form/CustomPizza">Try now</a>
                        </div>
                    </div>
                </div>
            </div>
            @foreach (var pizza in @Model.pizzaDataBase)
            {
                var imagePath = "/css/images/" + (pizza.ImageTitle + ".png");
                 <div class="col-4 mb-5">
                     <a class="pizza-img" asp-page="/Checkout/CheckOut" 
                        asp-route-ImageTitle="@pizza.ImageTitle" 
                        asp-route-PizzasPrice="@pizza.FinalePrice"
                        asp-route-PizzaName="@pizza.PizzaName">
                         <img src= @imagePath class="w-100" asp-append-version="true"/>
                         </a>
                     <br/>
                     </div>
            }
           
        </div>
    </div>
    </div>

